            <embedded-txt-file filename="test_pythontest1.py">import unittest&#13;
import subprocess&#13;
import os&#13;
&#13;
class TestOutput(unittest.TestCase):&#13;
    def test_hello_world_5_times(self):&#13;
        # Cari file python student (bukan test file)&#13;
        student_file = None&#13;
        for f in os.listdir('.'):&#13;
            if f.endswith('.py') and not f.startswith('test'):&#13;
                student_file = f&#13;
                break&#13;
        &#13;
        self.assertIsNotNone(student_file, &quot;No student Python file found&quot;)&#13;
        &#13;
        # Jalankan file sebagai subprocess&#13;
        result = subprocess.run(&#13;
            ['python3', student_file],&#13;
            capture_output=True,&#13;
            text=True,&#13;
            timeout=10&#13;
        )&#13;
        &#13;
        output = result.stdout.strip()&#13;
        expected = &quot;Hello World!\nHello World!\nHello World!\nHello World!\nHello World!&quot;&#13;
        &#13;
        self.assertEqual(output, expected, &#13;
            f&quot;Output tidak sesuai.\nExpected:\n{expected}\n\nGot:\n{output}&quot;)&#13;
&#13;
if __name__ == '__main__':&#13;
    unittest.main()</embedded-txt-file>
